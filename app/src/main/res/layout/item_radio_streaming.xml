<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.huynq.vovlao.data.model.Song" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cardCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_7dp"
        android:layout_marginEnd="@dimen/dimen_7dp"
        android:background="@color/bg_circle_unselected"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgLogoRadio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/menu_radio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6"
            app:tint="@color/orange" />

        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="@{data.artistName}"
            android:textColor="@color/appBar"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgLogoRadio"
            app:layout_constraintStart_toStartOf="@+id/imgLogoRadio"
            app:layout_constraintTop_toBottomOf="@+id/imgLogoRadio" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>