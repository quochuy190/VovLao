<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager
        android:background="@color/white"
        android:id="@+id/vpAutoScroll"
        app:layout_constraintDimensionRatio="2.2 :1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dimen_5dp"
        android:id="@+id/rcvRadioStreaming"
        app:layout_constraintTop_toBottomOf="@+id/vpAutoScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llControl"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:background="@color/bg_circle_selected"
        android:padding="@dimen/dimen_7dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@+id/rcvRadioStreaming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="@dimen/dimen_5dp"
            android:id="@+id/icPlay"
            android:src="@drawable/ic_pause"
            app:layout_constraintWidth_percent="0.09"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:tint="@color/white" />
        <ImageView
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:id="@+id/icMute"
            android:src="@drawable/ic_pause"
            app:layout_constraintWidth_percent="0.07"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:tint="@color/white" />
        <SeekBar
            style="@style/MySeekBar"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icPlay"
            app:layout_constraintEnd_toStartOf="@+id/icMute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:id="@+id/lableEPG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/appBar"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llControl" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rcvEPG"
        app:layout_constraintTop_toBottomOf="@+id/lableEPG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>