<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VovLao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appBar</item>
        <item name="colorPrimaryVariant">@color/appBar</item>
        <item name="colorOnPrimary">@color/appBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="TextMainItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextToolbarNomal" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSp20" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSp18" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSp16" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSp15" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextSp14" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextActionBottomMenu" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/textAppBar</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
    <item name="android:progressBackgroundTint" tools:ignore="NewApi">#172D8C</item>
    <item name="android:progressTint" tools:ignore="NewApi">@color/white</item>
    <item name="android:colorControlActivated" tools:ignore="NewApi">@color/transparent</item>
    </style>

    <style name="MySeekBarDetail" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">#172D8C</item>
        <item name="android:progressTint" tools:ignore="NewApi">@color/appBar</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/transparent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>